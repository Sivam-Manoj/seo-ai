{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "env": {
    "GOOGLE_SEARCH_API_KEY": "@google_search_api_key",
    "GOOGLE_CSE_ID": "@google_cse_id",
    "OPENAI_API_KEY": "@openai_api_key"
  },
  "static": {
    "directory": "public"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
