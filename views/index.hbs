<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>AI SEO Optimizer</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css'
      rel='stylesheet'
    />
    <style>
      body { background-color: #f4f6f9; font-family: 'Arial', sans-serif; }
      .container { max-width: 900px; margin-top: 50px; } .seo-card {
      background-color: #ffffff; box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      border-radius: 12px; padding: 30px; margin-bottom: 30px; transition: all
      0.3s ease; } .seo-card:hover { transform: translateY(-5px); box-shadow: 0
      12px 30px rgba(0, 0, 0, 0.15); } .seo-card h2 { font-size: 28px; color:
      #007bff; font-weight: 600; } .seo-card h4 { color: #333; font-size: 20px;
      margin-top: 20px; } .seo-card p, .seo-card ul { font-size: 16px;
      line-height: 1.6; color: #555; } .seo-card pre { background-color:
      #f8f9fa; border-radius: 8px; padding: 15px; white-space: pre-wrap;
      word-wrap: break-word; font-size: 14px; color: #333; margin-top: 10px; }
      .seo-card .list-unstyled li { padding: 8px 0; border-bottom: 1px solid
      #ddd; } .seo-card .list-unstyled li:last-child { border-bottom: none; }
      .form-group input, .form-group button { font-size: 16px; } .form-group
      input { border-radius: 8px 0 0 8px; } .form-group button { border-radius:
      0 8px 8px 0; background-color: #007bff; color: white; font-weight: 600; }
      .form-group button:hover { background-color: #0056b3; transition:
      background-color 0.3s; } .alert { font-size: 14px; }
    </style>
  </head>
  <body>
    <div class='container'>
      <div class='text-center mb-5'>
        <h1 class='display-4 text-primary'>AI SEO Optimizer</h1>
        <p class='lead text-muted'>
          Enter a keyword to generate SEO-optimized content and improve your
          online presence.
        </p>
      </div>

      <form action='/generate-seo' method='POST' class='mb-4'>
        <div class='input-group form-group'>
          <input
            type='text'
            name='keyword'
            class='form-control form-control-lg'
            placeholder='Enter a keyword for SEO optimization'
            required
          />
          <button type='submit' class='btn btn-lg btn-primary'>Generate SEO</button>
        </div>
      </form>

      {{#if error}}
        <div class='alert alert-danger'>{{error}}</div>
      {{/if}}

      {{#if seoData}}
        <div class='seo-card'>
          <h2>Generated SEO Content</h2>
          <div class='seo-content'>
            <h4>SEO Title</h4>
            <p><strong>{{seoData.seoTitle}}</strong></p>

            <h4>Meta Description</h4>
            <p>{{seoData.metaDescription}}</p>

            <h4>Product Description</h4>
            <p>{{seoData.productDescription}}</p>

            <h4>Suggested Pricing</h4>
            <p>{{seoData.suggestedPricing}}</p>

            <h4>FAQ</h4>
            <ul class='list-unstyled'>
              {{#each seoData.faq}}
                <li>
                  <strong>{{this.question}}</strong><br />
                  <small>{{this.answer}}</small>
                </li>
              {{/each}}
            </ul>
          </div>
        </div>
      {{/if}}
    </div>

    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js'
    ></script>
  </body>
</html>